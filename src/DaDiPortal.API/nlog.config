<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile="c:\temp\internal-nlog-AspNetCore.txt">

	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore"/>
	</extensions>

	<!-- the targets to write to -->
	<targets>
		<target 
			xsi:type="File" 
			name="ApiLogFile" 
			fileName="${basedir}\logs\${shortdate}_API.log"
			layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}" />

		<target
			xsi:type="File"
			name="MicrosoftLogFile"
			fileName="${basedir}\logs\${shortdate}_MS.log"
			layout="${longdate}|${event-properties:item=EventId_Id:whenEmpty=0}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}|url: ${aspnet-request-url}|action: ${aspnet-mvc-action}|${callsite}" />
	</targets>

	<rules>
		<logger name="DaDiPortal.*" minlevel="Trace" writeTo="ApiLogFile" />
		<logger name="Microsoft.*" minlevel="Trace" writeTo="MicrosoftLogFile" />
	</rules>
</nlog>